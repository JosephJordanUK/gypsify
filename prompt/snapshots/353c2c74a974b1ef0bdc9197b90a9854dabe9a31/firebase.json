{
  "firestore": {
    "rules": "prompt/firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "site": "gypsify-35447",
    "public": "hosting",
    "ignore": ["firebase.json", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.txt",
        "headers": [
          { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
          { "key": "Cache-Control", "value": "no-store" }
        ]
      },
      {
        "source": "**/*.json.txt",
        "headers": [
          { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
          { "key": "Cache-Control", "value": "no-store" }
        ]
      },
      {
        "source": "**/*.md.txt",
        "headers": [
          { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
          { "key": "Cache-Control", "value": "no-store" }
        ]
      }
    ]
  }
}
